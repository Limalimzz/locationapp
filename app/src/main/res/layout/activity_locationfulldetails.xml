<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".locationfulldetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_margin="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/name"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="26sp"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/address1"
                        android:layout_marginTop="6dp"
                        android:drawableLeft="@drawable/ic_baseline_add_location_24"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/address2"
                        android:drawableLeft="@drawable/ic_baseline_add_location_24"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pincode"
                        android:drawableLeft="@drawable/ic_baseline_add_location_24"
                        android:layout_marginTop="6dp"
                        android:textColor="#000"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mobile"
                        android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                        android:textSize="22sp"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/telephone1"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_baseline_call_24"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                       />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/telephone2"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_baseline_call_24"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/comm_email"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/alt_email"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/website"
                        android:textSize="20sp"
                        android:autoLink="web"
                        android:drawableLeft="@drawable/ic_baseline_web_24"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/reservation_link"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_baseline_link_24"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        >

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/place"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_baseline_place_24"
                        android:textColor="#000"
                        android:layout_marginTop="8dp"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/image"
                        android:textSize="20sp"
                        android:autoLink="web"
                        android:text="View Images"
                        android:textColor="#000"
                        android:drawableLeft="@drawable/ic_baseline_image_24"
                        android:layout_marginTop="8dp"
                        >

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>